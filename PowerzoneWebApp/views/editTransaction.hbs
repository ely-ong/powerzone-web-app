<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Transaction</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/editTransactionStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="../js/editTransaction.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
    {{> navBar}}

    <div id="editTransact_box">
        <h1 id="label_editTransact">Edit Transaction</h1>
        <div id="editTransactForm_box">
            <form id="form_editTransact" method="post" action="/">
                <div class="editTransactDetail_box" id="editTransactStatus_box">
                    <h5 class="label" id="label_editTransactStatus">Status</h5>
                    <select class="editTransactInput editSelect" id="select_editTransactStatus" name="status" value="{{{result.}}}" required>
                        <option value="{{{result.}}}" selected hidden>{{{result.}}}</option>
                        <option id="editTransact_option_delivered_complete">Delivered Completely</option> 
                        <option id="editTransact_option_delivered_partially">Delivered Partially</option> 
                        <option id="editTransact_option_pending">Pending</option> 
                        <option id="editTransact_option_cancelled">Cancelled</option> 
                    </select>
                    <p class="error" id="errorEditTransactStatus">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactDate_box">
                    <h5 class="label" id="label_editTransactDate">Date</h5>
                    <input class="editTransactInput" id="input_editTransactDate" type="date" name="date" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactDate">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactDeliveryNo_box">
                    <h5 class="label" id="label_editTransactDeliveryNo">Delivery Receipt No.</h5>
                    <input class="editTransactInput" id="input_editTransactDeliveryNo" type="number" min = "0" name="delivery_receipt_no" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactDeliveryNo">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactSalesNo_box">
                    <h5 class="label" id="label_editTransactSalesNo">Sales Invoice No.</h5>
                    <input class="editTransactInput" id="input_editTransactSalesNo" type="number" min = "0" name="sales_invoice_no" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactSalesNo">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactTruckPlateNo_box">
                    <h5 class="label" id="label_editTransactTruckPlateNo">Truck Plate No.</h5>
                    <input class="editTransactInput" id="input_editTransactTruckPlateNo" type="text" name="truck_plate_no" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactTruckPlateNo">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactCustomerName_box">
                    <h5 class="label" id="label_editTransactCustomerName">Customer Name</h5>
                    <input class="editTransactInput" id="input_editTransactCustomerName" type="text" name="customer_name" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactCustomerName">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactAddress_box">
                    <h5 class="label" id="label_editTransactAddress">Address</h5>
                    <input class="editTransactInput" id="input_editTransactAddress" type="text" name="editress" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactAddress">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactAccntNo_box">
                    <h5 class="label" id="label_editTransactAccntNo">Account No.</h5>
                    <input class="editTransactInput" id="input_editTransactAccntNo" type="number" min = "0" name="account_no" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactAccntNo">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactTinNo_box">
                    <h5 class="label" id="label_editTransactTinNo">Tin No.</h5>
                    <input class="editTransactInput" id="input_editTransactTinNo" type="text" name="tin_no" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactTinNo">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactProduct_box">
                    <h5 class="label" id="label_editTransactProduct">Product</h5>
                    <select class="editTransactInput editSelect" id="select_editTransactProduct" name="product" value="{{{result.}}}" required>
                        <option value="{{{result.}}}" selected hidden>{{{result.}}}</option>
                        <option id="editTransact_option_diesel">Diesel</option> 
                        <option id="editTransact_option_gasoline">Gasoline</option> 
                        <option id="editTransact_option_premium_gasoline_95">Premium Gasoline 95</option> 
                        <option id="editTransact_option_premium_gasoline_97">Premium Gasoline 97</option> 
                        <option id="editTransact_option_kerosene">Kerosene</option> 
                    </select>
                    <p class="error" id="errorEditTransactProduct">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editTransactQuantity_box">
                    <h5 class="label" id="label_editTransactQuantity">Quantity of Product in Liters</h5>
                    <input class="editTransactInput" id="input_editTransactQuantity" type="number" step = "0.01" min = "0" name="quantity" value="{{{result.}}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditTransactQuantity">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editTransactSellingPrice_box">
                    <h5 class="label" id="label_editTransactSellingPrice">Selling Price of Product</h5>
                    <input class="editTransactInput" id="input_editTransactSellingPrice" type="number" step = "0.01" min = "0" name="selling_price" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactSellingPrice">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editTransactAmnt_box">
                    <h5 class="label" id="label_editTransactAmnt">Amount/Product</h5>
                    <input class="editTransactInput" id="input_editTransactAmnt" type="number" step = "0.01" min = "0" name="amount_per_product" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactAmnt">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editTransactTotalAmnt_box">
                    <h5 class="label" id="label_editTransactTotalAmnt">Total Amount</h5>
                    <input class="editTransactInput" id="input_editTransactTotalAmnt" type="number" step = "0.01" min = "0" name="total_amount" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactTotalAmnt">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactPrepared_box">
                    <h5 class="label" id="label_editTransactPrepared">Prepared By</h5>
                    <input class="editTransactInput" id="input_editTransactPrepared" type="text" name="prepared_by" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactPrepared">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactLoaded_box">
                    <h5 class="label" id="label_editTransactLoaded">Loaded By</h5>
                    <input class="editTransactInput" id="input_editTransactLoaded" type="text" name="loaded_by"value="{{{result.}}}"  autocomplete="off"><br>
                    <p class="error" id="errorEditTransactLoaded">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactDriver_box">
                    <h5 class="label" id="label_editTransactDriver">Driver</h5>
                    <input class="editTransactInput" id="input_editTransactDriver" type="text" name="driver" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactDriver">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactGuard_box">
                    <h5 class="label" id="label_editTransactGuard">Guard</h5>
                    <input class="editTransactInput" id="input_editTransactGuard" type="text" name="guard" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactGuard">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactCustomerRep_box">
                    <h5 class="label" id="label_editTransactCustomerRep">Customer Representative</h5>
                    <input class="editTransactInput" id="input_editTransactCustomerRep" type="text" name="customer_representative" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactCustomerRep">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactApproved_box">
                    <h5 class="label" id="label_editTransactApproved">Delivery Approved By</h5>
                    <input class="editTransactInput" id="input_editTransactApproved" type="text" name="delivery_approved_by" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactApproved">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactChecked_box">
                    <h5 class="label" id="label_editTransactChecked">Delivery Checked By</h5>
                    <input class="editTransactInput" id="input_editTransactChecked" type="text" name="delivery_checked_by" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactChecked">{{error}}</p>
                </div>
                <div class="editTransactDetail_box" id="editTransactRemarks_box">
                    <h5 class="label" id="label_editTransactRemarks">Remarks</h5>
                    <input class="editTransactInput" id="input_editTransactRemarks" type="text" name="remarks" value="{{{result.}}}" autocomplete="off"><br>
                    <p class="error" id="errorEditTransactRemarks">{{error}}</p>
                </div>

                <div id="btnEditTransact_box">
                    <button class="editBtns" name = "submit_button" id="btn_editTransact" type="submit" value="{{result.}}">Submit Changes</button>
                    <a href = "/products" style = "text-decoration: none; color: white;">
                        <button class="editBtns" id="btn_editTransactCancel" type="button" value="Cancel">Cancel</button>
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>