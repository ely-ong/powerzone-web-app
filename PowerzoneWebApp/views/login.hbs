<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="../css/loginStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
	  <script src="../js/login.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
  </head>
  <body>
      <div id="row_box">
        <div id="logo_box">
          <img id="logo" src="../images/POWERZONE_LOGO.png">
        </div>
        <div id="login_box">
          <form id="form_login" method="post" action="/login">
            <h2 class="label" id="label_welcome">Welcome</h2>
              <div class="box" id="username_box">
                <h5 class="label" id="label_username">Username</h5>
                <input class="input_login" id="input_username" type="text" name="username" autocomplete="off" required><br>
                <p class="error" id="errorUsername">{{error}}</p>
              </div>
              <div class="box" id="password_box">
                <h5 class="label" id="label_password">Password</h5>
                <input class="input_login" id="input_password" type="password" name="password" required><br>
                <p class="error" id="errorPsword"></p>
              </div>
                   {{!-- <a href="/forgot" id="link_forgotPsword">Forgot Password?</a>
                    <p class="label" id="or"> OR </p>
                    <a href="/signup" id="link_signup">Sign Up</a> --}}
              <input id="btn_login" type="submit" value="Log In" disabled>
          </form>
        </div>
      </div>
  </body>
</html>
