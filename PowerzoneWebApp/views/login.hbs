<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="../css/loginStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
	<script src="../js/login.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
  </head>
  <body>
      <div id="row_box">
        <div id="logo_box">
            <img id="logo" src="../images/POWERZONE_LOGO.png">
          </div>
          <div id="login_box">
              <div id="login_contents">
                
                <form method="post" action="/login">
                    <h2 id="label_welcome">Welcome</h2>
                    <div id="username_box">
                        <h5 id="label_username">Username</h5>
                        <input id="input_username" type="text" name="username" autocomplete="off" ><br>
                        <p id="errorUsername">{{error}}</p>
                    </div>
                    <div id="password_box">
                        <h5 id="label_password">Password</h5>
                        <input id="input_password" type="password" name="password" ><br>
                        <p id="errorPsword"></p>
                    </div>
                    <input id="btn_login" type="submit" value="Login">
                    <a href="/" id="link_forgotPsword">Forgot Password?</a>
                    <p id="or"> OR </p>
                    <a href="/signup" id="link_signup">Sign Up</a>
                </form>
              </div>
          </div>
      </div>
  </body>
</html>

