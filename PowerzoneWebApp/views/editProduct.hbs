<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/editProductStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="../js/editProduct.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
    {{> navBar}}
    
    <div id="editProduct_box">
        <h1 id="label_editProduct">Edit Product</h1>
        <div id="editForm_box">
            <form id="form_edit" method="get" action="/updateProduct">
                <div class="editDetail_box" id="editDate_box">
                    <h5 class="label" id="label_editDate">Date of Purchase</h5>
                    <input class="editInput" id="input_editDate" type="date" onfocus="(this.type='date')" onblur="(this.type='text')" name="date_purchase" value="{{result.dateString}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditDate">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editSupplier_box">
                    <h5 class="label" id="label_editSupplier">Supplier</h5>
                    <input class="editInput" id="input_editSupplier" type="text" name="supplier" value="{{result.supplier}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditSupplier">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editQuantity_box">
                    <h5 class="label" id="label_editQuantity">Quantity</h5>
                    <input class="editInput" id="input_editQuantity" type="number" step = "0.01" min = "0" name="quantity" value="{{result.quantity}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditQuantity">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editProductType_box">
                    <h5 class="label" id="label_editProductType">Product</h5>
                    <!-- <input class="editInput" id="input_editProductType" type="text" name="product" value="{{result.product}}" autocomplete="off" required><br> -->
                    <select class="editInput" id="select_editProductType" name="product" required>
                        <option value="{{result.product}}" disabled selected hidden>{{result.product}}</option>
                        <option id="edit_option_diesel">Diesel</option> 
                        <option id="edit_option_gasoline">Gasoline</option> 
                        <option id="edit_option_premium_gasoline_95">Premium Gasoline 95</option> 
                        <option id="edit_option_premium_gasoline_97">Premium Gasoline 97</option> 
                        <option id="edit_option_kerosene">Kerosene</option> 
                    </select>
                    <p class="error" id="errorEditProductType">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editPriceLiter_box">
                    <h5 class="label" id="label_editPriceLiter">Buying Price/Liter</h5>
                    <input class="editInput" id="input_editPriceLiter" type="number" step = "0.01" min = "0" name="price_liter" value="{{result.price}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditPriceLiter">{{error}}</p>
                </div>
                <div class="editDetail_box" id="editLocation_box">
                    <h5 class="label" id="label_editLocation">Stock Location</h5>
                    <input class="editInput" id="input_editLocation" type="text" name="stock_location" value="{{result.location}}" autocomplete="off" required><br>
                    <p class="error" id="errorEditLocation">{{error}}</p>
                </div>
                <div id="btnEdit_box">
                    <button id="btn_edit" type="submit" value = "{{result.productId}}" name="product_id_holder">Submit Changes</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>