                    <input class="addTransactInput" id="input_addTransactTinNo" type="text" name="tin_no" autocomplete="off" required><br>
                    <p class="error" id="errorAddTransactTinNo">{{error}}</p>
                </div>

                 {{!-- checkbox of products --}}
                <div class="addTransactDetail_box" id="addTransactProduct_box">
                    <h5 class="label" id="label_addTransactProduct">Product(s)</h5>
                    <div class="add_check_items_box">
                        <div class="add_product_check_item">
                            <input class="add_product_checkbox" type="checkbox" id="add_checkbox_diesel" value="true" name="add_checkbox_diesel">
                            <label class="add_product_check_label" for="add_checkbox_diesel">Diesel</label>
                        </div>
                        <div class="add_product_check_item">
                            <input class="add_product_checkbox" type="checkbox" id="add_checkbox_gasoline" value="true" name="add_checkbox_gasoline">
                            <label class="add_product_check_label" for="add_checkbox_gasoline">Gasoline</label>
                        </div>
                        <div class="add_product_check_item">
                            <input class="add_product_checkbox" type="checkbox" id="add_checkbox_premium95" value="true" name="add_checkbox_premium95">
                            <label class="add_product_check_label" for="add_checkbox_premium95">Premium Gasoline 95</label>
                        </div>
                        <div class="add_product_check_item">
                            <input class="add_product_checkbox" type="checkbox" id="add_checkbox_premium97" value="true" name="add_checkbox_premium97">
                            <label class="add_product_check_label" for="add_checkbox_premium97">Premium Gasoline 97</label>
                        </div>
                        <div class="add_product_check_item">
                            <input class="add_product_checkbox" type="checkbox" id="add_checkbox_kerosene" value="true" name="add_checkbox_kerosene">
                            <label class="add_product_check_label" for="add_checkbox_kerosene">Kerosene</label>
                        </div>
                    </div>
                    <p class="error" id="errorAddTransactProduct">{{error}}</p>
                </div>

