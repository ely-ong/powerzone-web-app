                    <input class="addTransactInput" id="input_addTransactTruckPlateNo" type="text" name="truck_plate_no" autocomplete="off" required><br>
                    <p class="error" id="errorAddTransactTruckPlateNo">{{error}}</p>
                </div>
                <div class="addTransactDetail_box" id="addTransactCustomerName_box">
                    <h5 class="label" id="label_addTransactCustomerName">Customer Name</h5>
                    <input class="addTransactInput" id="input_addTransactCustomerName" type="text" name="customer_name" autocomplete="off" required><br>
                    <p class="error" id="errorAddTransactCustomerName">{{error}}</p>
                </div>
                <div class="addTransactDetail_box" id="addTransactAddress_box">
                    <h5 class="label" id="label_addTransactAddress">Address</h5>
                    <input class="addTransactInput" id="input_addTransactAddress" type="text" name="address" autocomplete="off" required><br>
                    <p class="error" id="errorAddTransactAddress">{{error}}</p>
