                    <input class="addTransactInput" id="input_addTransactDate" type="date" name="date" autocomplete="off" required><br>
                    <p class="error" id="errorAddTransactDate">{{error}}</p>
                </div>
                <div class="addTransactDetail_box" id="addTransactDeliveryNo_box">
                    <h5 class="label" id="label_addTransactDeliveryNo">Delivery Receipt No.</h5>
                    <input class="addTransactInput" id="input_addTransactDeliveryNo" type="number" min = "0" name="delivery_receipt_no" autocomplete="off" required><br>
                    <p class="error" id="errorAddTransactDeliveryNo">{{error}}</p>
                </div>
                <div class="addTransactDetail_box" id="addTransactSalesNo_box">
                    <h5 class="label" id="label_addTransactSalesNo">Sales Invoice No.</h5>
                    <input class="addTransactInput" id="input_addTransactSalesNo" type="number" min = "0" name="sales_invoice_no" autocomplete="off" required><br>
