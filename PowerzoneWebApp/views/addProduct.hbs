<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/addProductStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
    {{> navBar}}
    
    <div id="addProduct_box">
        <h1 id="label_addProduct">Add Product</h1>
        <div id="addForm_box">
            <form id="form_add" method="post" action="#">
                <div class="addDetail_box" id="addDate_box">
                    <h5 class="label" id="label_addDate">Date of Purchase</h5>
                    <input class="addInput" id="input_addDate" type="date" name="date_purchase" autocomplete="off" required><br>
                    <p class="error" id="errorAddDate">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addAmntLiter_box">
                    <h5 class="label" id="label_addAmntLiter">Amount in Liters</h5>
                    <input class="addInput" id="input_addAmntLiter" type="number" name="amnt_liter" autocomplete="off" required><br>
                    <p class="error" id="errorAddAmntLiter">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addType_box">
                    <h5 class="label" id="label_addType">Product Type</h5>
                    <input class="addInput" id="input_addType" type="text" name="product_type" autocomplete="off" required><br>
                    <p class="error" id="errorAddType">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addPriceLiter_box">
                    <h5 class="label" id="label_addPriceLiter">Price/Liter</h5>
                    <input class="addInput" id="input_addPriceLiter" type="number" name="price_liter" autocomplete="off" required><br>
                    <p class="error" id="errorAddPriceLiter">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addWithdraw_box">
                    <h5 class="label" id="label_addWithdraw">Withdrawal Amount</h5>
                    <input class="addInput" id="input_addWithdraw" type="number" name="withdraw_amnt" autocomplete="off" required><br>
                    <p class="error" id="errorAddWithdraw">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addBalance_box">
                    <h5 class="label" id="label_addBalance">Inventory Balance</h5>
                    <input class="addInput" id="input_addBalance" type="number" name="inventory_balance" autocomplete="off" required><br>
                    <p class="error" id="errorAddBalance">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addLocation_box">
                    <h5 class="label" id="label_addLocation">Stock Location</h5>
                    <input class="addInput" id="input_addLocation" type="text" name="stock_location" autocomplete="off" required><br>
                    <p class="error" id="errorAddLocation">{{error}}</p>
                </div>
                <div id="btnAdd_box">
                    <input id="btn_add" type="submit" value="Add to Inventory" disabled>
                </div>
            </form>
        </div>
    </div>
</body>
</html>