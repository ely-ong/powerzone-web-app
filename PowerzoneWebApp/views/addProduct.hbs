<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/addProductStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
    {{> navBar}}
    
    <div id="addProduct_box">
        <h1 id="label_addProduct">Add Product</h1>
        <div id="addForm_box">
            <form id="form_add" method="post" action="/postProduct">
                <div class="addDetail_box" id="addDate_box">
                    <h5 class="label" id="label_addDate">Date of Purchase</h5>
                    <input class="addInput" id="input_addDate" type="date" name="date_purchase" autocomplete="off" required><br>
                    <p class="error" id="errorAddDate">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addSupplier_box">
                    <h5 class="label" id="label_addSupplier">Supplier</h5>
                    <input class="addInput" id="input_addSupplier" type="text" name="supplier" autocomplete="off" required><br>
                    <p class="error" id="errorAddSupplier">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addQuantity_box">
                    <h5 class="label" id="label_addQuantity">Quantity</h5>
                    <input class="addInput" id="input_addQuantity" type="number" step = "0.01" min = "0" name="quantity" autocomplete="off" required><br>
                    <p class="error" id="errorAddQuantity">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addProductType_box">
                    <h5 class="label" id="label_addProductType">Product</h5>
                    <input class="addInput" id="input_addProductType" type="text" name="product" autocomplete="off" required><br>
                    <p class="error" id="errorAddProductType">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addPriceLiter_box">
                    <h5 class="label" id="label_addPriceLiter">Buying Price/Liter</h5>
                    <input class="addInput" id="input_addPriceLiter" type="number" step = "0.01" min = "0" name="price_liter" autocomplete="off" required><br>
                    <p class="error" id="errorAddPriceLiter">{{error}}</p>
                </div>
                <div class="addDetail_box" id="addLocation_box">
                    <h5 class="label" id="label_addLocation">Stock Location</h5>
                    <input class="addInput" id="input_addLocation" type="text" name="stock_location" autocomplete="off" required><br>
                    <p class="error" id="errorAddLocation">{{error}}</p>
                </div>
                <div id="btnAdd_box">
                    <input id="btn_add" type="submit" value="Add to Inventory">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
