<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Inventory</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/notifBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/productStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
{{> navBar}}
{{> notifBar}}
<div id="product_box">
    <div id="add_box">
        <a href="#" id="link_add">+ Add Product</a>
    </div>
    <h1 id="label_product">Product Inventory</h1>
    <div id="table_box">
        <table id="products_table">
            <tr id="table_header">
                <th class="table_head">Date of Purchase</th>
                <th class="table_head">Amount in Liters</th>
                <th class="table_head">Product Type</th>
                <th class="table_head">Price/Liter</th>
                <th class="table_head">Withdrawal Amount</th>
                <th class="table_head">Inventory Balance</th>
                <th class="table_head">Stock Location</th>

                {{!-- extra header tags to match length of succeeding rows --}}
                <th></th>
                <th></th>
            </tr>
            <tr class="table_rows">
                <td class="product_item">Date</td>
                <td class="product_item">999 L</td>
                <td class="product_item">Type</td>
                <td class="product_item">Price</td>
                <td class="product_item">Amount</td>
                <td class="product_item">Balance</td>
                <td class="product_item">Location</td>
                <td>
                    {{!-- icon for edit product link --}}
                    <a href="#"><img src="../images/edit.png"  class="link_icons" id="edit_icon"></a>
                </td>
                <td>
                     {{!-- icon for delete product link --}}
                    <a href="#"><img src="../images/delete.png"  class="link_icons" id="delete_icon"></a>
                </td>
            </tr>
            <tr class="table_rows">
                <td class="product_item">Next Row</td>
            </tr>
        </table>
    </div>
</div>
    
</body>
</html>