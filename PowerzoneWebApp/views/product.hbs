<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Inventory</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/notifBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/productStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="../js/products.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
{{> navBar}}
{{> notifBar}}
<div id="product_box">
    <div id="add_box">
        <button id = "link_add" type = "submit" style = "cursor: pointer;">+ Add Product</button>
    </div>
    <h1 id="label_product">Product Inventory</h1>
    <div id="table_box">
        <table id="products_table">
            <tr id="table_header">
                <th class="table_head">Date of Purchase (YYYY-MM-DD)</th>
                <th class="table_head">Supplier</th>
                <th class="table_head">Quantity</th>
                <th class="table_head">Product</th>
                <th class="table_head">Buying Price/Liter</th>
                <th class="table_head">Amount</th>
                {{!-- <th class="table_head">Inventory Balance</th> --}}
                <th class="table_head">Stock Location</th>

                {{!-- extra header tags to match length of succeeding rows --}}
                <th></th>
                <th></th>
            </tr>
            <!-- <tr class="table_rows">
                <td class="product_item">Date</td>
                <td class="product_item">999 L</td>
                <td class="product_item">Type</td>
                <td class="product_item">Price</td>
                <td class="product_item">Amount</td>
                <td class="product_item">Balance</td>
                <td class="product_item">Location</td>
                <td>
                    {{!-- icon for edit product link --}}
                    <a href="#"><img src="../images/edit.png"  class="link_icons" id="edit_icon"></a>
                </td>
                <td>
                     {{!-- icon for delete product link --}}
                    <a href="#"><img src="../images/delete.png"  class="link_icons" id="delete_icon"></a>
                </td>
            </tr> -->
            {{#each productsArray}}
            <tr class="table_rows">
                <td class="product_item">{{this.dateString}}</td>
                <td class="product_item">{{this.supplier}}</td>
                <td class="product_item">{{this.quantity}} L</td>
                <td class="product_item">{{this.product}}</td>
                <td class="product_item">P{{this.price}}</td>
                <td class="product_item">P{{this.withdrawal}}</td>
                {{!-- <td class="product_item">{{this.balance}} L</td> --}}
                <td class="product_item">{{this.location}}</td>
                <td>
                    {{!-- icon for edit product link --}}
                    <!-- <form id="edit_form" method="get" action="/editProduct"> -->
                        <button style = "border: 0px; background-color: transparent;" type="submit" value = "{{this.productId}}" name = "edit_button" class = "edit_product" style = "cursor: pointer;">
                           <img src="../images/edit.png"  class="link_icons" id="edit_icon" value = "{{this.productId}}" style="cursor: pointer;">
                        </button>
                    <!-- </form> -->
                </td>
                <td>
                    {{!-- icon for delete product link --}}
                    <!-- <form id="delete_form" method="get" action="/deleteProduct"> -->
                        <button style = "border: 0px; background-color: transparent;" type="submit" value = "{{this.productId}}" name = "delete_button" class = "delete_product" style = "cursor: pointer;">
                            <img src="../images/delete.png"  class="link_icons" id="delete_icon" value = "{{this.productId}}" style="cursor: pointer;">
                        </button>
                    <!-- </form> -->
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
    
</body>
</html>
