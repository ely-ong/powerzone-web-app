<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deliveries</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/deliveryStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="../js/deliveries.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
{{> navBar}}

<div id="delivery_box">
    <h1 id="label_delivery" style = "z-index: -1;">Deliveries</h1>
    {{!-- search elements (low priority)
    <div id="searchDelivery_box">
        <form action="#">
            <input id="input_searchDelivery" type="text" placeholder="Filter deliveries by date" name="search_delivery">
            <button id="btn_searchDelivery" type="submit"><img class="search_icon" src="../images/search_black.png"></button>
        </form>
    </div> --}}
    <div id="deliveryTable_box">
        <table id="delivery_table">
            <thead>
                <tr id="deliveryTable_header">
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_date" id="filter_date">Date<br>(MM-DD-YYYY)</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_status" id="filter_status">Status</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_deliveryNo" id="filter_deliveryNo">Delivery Receipt No.</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_truckPlateNo" id="filter_truckPlateNo">Truck Plate No.</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_truckDriverName" id="filter_truckDriverName">Truck Driver Name</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_customerName" id="filter_customerName">Customer Name</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_address" id="filter_address">Address</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_product" id="filter_product">Product</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head numbers sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button numbers" type="submit" value="{{u.sortCriteria.}}" name="filter_qtyLiters" id="filter_qtyLiters">Quantity of Product<br>in Liters</button>
                        </form>
                    </th>
                    <th class="deliveryTable_head sortable">
                        <form method="get" action="/sortBy">
                            <button class="filter_button" type="submit" value="{{u.sortCriteria.}}" name="filter_remarks" id="filter_remarks">Remarks</button>
                        </form>
                    </th>
                </tr>
            </thead>
            {{#each (reverseArray u.)}}
            <tbody>
                <tr class="deliveryTable_rows">
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                    <td class="delivery_item numbers">{{this.}}</td>
                    <td class="delivery_item">{{this.}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</div>
    
</body>
</html>
