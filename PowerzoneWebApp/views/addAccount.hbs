<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Account</title>
    <link href="../css/navBarStyle.css" rel="stylesheet" type="text/css" >
    <link href="../css/addAccountStyle.css" rel="stylesheet" type="text/css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato&display=swap');
    </style>
</head>
<body>
    {{> navBar}}
    
    <div id="addAccnt_box">
        <h1 id="label_addAccnt">Add Account</h1>
        <div id="addAccntForm_box">
            <form id="form_addAccnt" method="post" action="#">
                <div class="addAccntDetail_box" id="addAccntUsername_box">
                    <h5 class="label" id="label_addAccntUsername">Username</h5>
                    <input class="addAccntInput" id="input_addAccntUsername" type="text" name="username" autocomplete="off" required><br>
                    <p class="error" id="errorAddAccntUsername">{{error}}</p>
                </div>
                <div class="addAccntDetail_box" id="addAccntRole_box">
                    <h5 class="label" id="label_addAccntRole">Role</h5>
                    <select class="addAccntInput" id="select_addAccntRole" name="role" required>
                        <option value="" disabled selected hidden>Select role</option>
                        <option id="addAccnt_option_genManager">Depot General Manager</option> 
                        <option id="addAccnt_option_supervisor">Depot Supervisor</option> 
                        <option id="addAccnt_option_cashier">Depot Cashier</option> 
                        <option id="addAccnt_option_regUser">Regular User</option> 
                    </select>
                    <p class="error" id="errorAddAccntRole">{{error}}</p>
                </div>
                <div class="addAccntDetail_box" id="addAccntPsword_box">
                    <h5 class="label" id="label_addAccntPsword">Password</h5>
                    <input class="addAccntInput" id="input_addAccntPsword" type="password" name="password" autocomplete="off" required><br>
                    <p class="error" id="errorAddAccntPsword">{{error}}</p>
                </div>
                <div class="addAccntDetail_box" id="addAccntConfirm_box">
                    <h5 class="label" id="label_addAccntConfirm">Confirm Password</h5>
                    <input class="addAccntInput" id="input_addAccntConfirm" type="password" name="confirm_password" autocomplete="off" required><br>
                    <p class="error" id="errorAddAccntConfirm">{{error}}</p>
                </div>
                <div id="btnAddAccnt_box">
                    <input class="addBtns" id="btn_addAccnt" type="submit" value="Add Account">
                    <input class="addBtns" id="btn_addAccntCancel" type="button" value="Cancel">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
